{
  "name": "flecs",
  "version": "0.0.1",
  "description": "Fast & Flexible EntityComponentSystem (ECS) for JavaScript & TypeScript",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DavidPeicho/flecs.git"
  },
  "author": "David Peicho <david.peicho@gmail.com>",
  "license": "MIT",
  "keywords": [
    "ecs",
    "entity component system",
    "game"
  ],
  "type": "module",
  "main": "./umd/fecs.js",
  "module": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "build": "npm run copy:to:dist && npm run build:ts && npm run build:umd",
    "build:ts": "tsc",
    "build:umd": "rollup -c",
    "start": "npm run copy:to:dist && tsc --watch",
    "example": "http-server ./ -c-1 -p 8080 --cors ./example",
    "lint": "eslint ./src/**/*.ts",
    "test": "ava",
    "pretty": "prettier ./src/ ./test --write",
    "copy:to:dist": "node --experimental-modules ./scripts/copy-to-dist.js"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@rollup/plugin-replace": "^2.3.4",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "ava": "^3.15.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "http-server": "^0.12.3",
    "husky": "^4.3.8",
    "prettier": "^2.2.1",
    "rollup": "^2.38.5",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ],
    "files": [
      "test/**/*.test.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretty"
    }
  }
}
